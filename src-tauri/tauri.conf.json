{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/config.schema.json",
  "productName": "Exemem Client",
  "version": "0.1.0",
  "identifier": "ai.exemem.client",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["exemem"]
      }
    }
  },
  "build": {
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Exemem Client",
        "label": "main",
        "width": 600,
        "height": 700,
        "minWidth": 500,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "closable": true,
        "decorations": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "tooltip": "Exemem Client"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "localhost"
    },
    "category": "Utility",
    "shortDescription": "Background sync client for Exemem cloud ingestion",
    "longDescription": "Exemem Client watches a local folder for file changes, uploads to S3 via presigned URLs, and triggers cloud ingestion through the Exemem API."
  }
}
